					<form method="POST" action="/login">
						<div style="float:left; width:70%;">
							<input type="text" title="id" id="id" name = "id" placeholder="아이디" required="required">
							<input type="password" title="password" id="password" name = "password" placeholder="비밀번호" required="required">
							<button type="summit" title="login" id="login" style="width:95%; margin-top:2px;">
								<span>
									로그인
								</span>
							</button>
						</div>
					</form>
					<div style="float:right; width:30%; height:70px;">
						<button onclick="location.href='/register'" type="button" title="register" id="register" style="width:100%; height:100%">
							<span>
								회원가입
							</span>
						</button>
					</div>
				</fieldset>
			</td>
		</tr>
	</table>
